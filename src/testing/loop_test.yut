LoopTest = @{
	test00fail_sanity : func (self) {
		for {
			break
		} fail {
			return nil
		}
		Assert:Fail("Can not goto here, `fail' not work!")
	},

	test01fail_range : func (self) {
		var k = 1000
		for var i in range(0, 10000) {
			if i == k {
				break
			}
		} fail {
			Assert:EQ(k, i)
			return nil
		}
		Assert:Fail("Can not goto here, `fail' not work!")
	},

	test02range_counting : func (self) {
		var c = 0 // counter
		var k = 65535 // max number
		for var i in range(0, k) {
			c = c + 1
			Assert:GT(k, i)
		} fail {
			Assert:Fail("Can not goto here.")
		}
		Assert:EQ(k, c)
	},

	test03fail_range_negative : func (self) {
		for var i in range(0, 100) {

		} fail {
			Assert:Fail("Can not goto here, not fail.")
		}
	}
}
